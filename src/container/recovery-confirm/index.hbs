<div class="page page--background">
    <header>
        {{> back-button}}
    </header>

    <form class="page__section">
        <h1 class="page__title">Відновлення паролю</h1>

        <div class="form">
            <div class="form__item">
                {{> field action="recoveryConfirmForm.change" name="code" label="Код" type="number" placeholder="Ваш код"}}
                <span name="code" class="form__error">Помилка</span>                
            </div>
            <div class="form__item">
                {{> field-password action="recoveryConfirmForm.change" name="password" label="Новий пароль" type="password" placeholder="Введіть пароль"}}
                <span name="password" class="form__error">Помилка</span>                
            </div>
            <div class="form__item">
                {{> field-password action="recoveryConfirmForm.change" name="passwordAgain" label="Пароль ще раз" type="password" placeholder="Введіть пароль ще раз"}}
                <span name="passwordAgain" class="form__error">Помилка</span>                
            </div>  
                
        </div>

        <button onclick="recoveryConfirmForm.submit()" class="button button--disabled" type="button">Змінити пароль</button>

        <span class="alert alert--disabled">Увага, помилка!</span>
    </form>
</div>